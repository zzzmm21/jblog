<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user1">
	<insert id="insert" parameterType="user1vo">
		<![CDATA[
		insert
		  into user1
		values (#{id }, #{name }, #{password }, 'user')
		]]>
	</insert>
	
	<select id="findByIdAndPassword" resultType="user1vo" parameterType="map">
		<![CDATA[
		select id ,name, role
		  from user1
		 where id=#{id } and password=#{password }
		]]>
	</select>
	<select id="findById" resultType="user1vo" parameterType="long">
		<![CDATA[
		select id, name,  from user1 where id=#{id }
		]]>
	</select>

</mapper>